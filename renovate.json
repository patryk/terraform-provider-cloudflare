{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "gomodTidy": true,
  "ignoreDeps": [
    "golang.org/x/crypto", 
    "golang.org/x/sys",
    "golang.org/x/net"
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@patryk", "@jacobbednarz"]
  },
  "includeForks": true,
  "packageRules": [
    {
      "packageNames": ["github.com/cloudflare/cloudflare-go"],
      "updateTypes": ["major","minor","patch"],
      "ignoreUnstable": false,
      "enabled": false
    }
  ]
}
